{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Aliasing */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@worker/*": [
        "./worker/src/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "worker/src/forms/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}